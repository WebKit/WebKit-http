	    mv -f $${installdir}/webkit2gtk.devhelp2 \
	      $${installdir}/webkit2gtk-$(DOC_MODULE_VERSION).devhelp2; \
	  fi; \
	fi
endif
	@$(AM_V_GEN)$(PYTHON) $(srcdir)/Tools/gtk/generate-gtkdoc --rebase --virtual-root=$${DESTDIR}

